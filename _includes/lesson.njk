---
layout: base.njk
---

<a class="breadcrumb" href="{{ "/lessons/" | locale_url }}">
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
  </svg>
     back</a>
<h3 class="lesson-title">{{ title }}</h3>

<div class="container lesson-metadata-box">
  <div id="left-box">
    {{ citation_information  | markdownify | safe }}
{% if pdf_file %}
<div>
  <button class="button" target="_blank" onclick="window.location.href='{{ pdf_file }}';">
                        Download as pdf
                    </button>
</div>
{% endif %}
{% if doc_file %}
  <button class="button" target="_blank" onclick="window.location.href='{{ doc_file }}';">
                        Download as docx
                    </button>
{% endif %}
  </div>
  <div id="right-box" onclick="openMedia();">
    
    <img height="100%" src="{{ thumbnail }}" alt="{{ title }}" class="lesson-image">
  </div>

</div>


{{ content | safe }}
{% if pdf_file %}
  <embed style="margin-left: 10%;" src="{{ pdf_file }}" width="80%" height="1100px" /> 
{% endif %}


{% block js %}
  <script>
    function openMedia() {
      var newWindow = window.open('{{ video }}', 'name', 'height=600,width=800');
      if (window.focus) {
        newWindow.focus();
      }
    }
  </script>
{% endblock %}